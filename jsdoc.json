{
    "opts": {
        "encoding": "utf8",
        "readme": "README.md",
        "destination": "docs/",
        "recurse": true,
        "verbose": true,
        "template": "node_modules/clean-jsdoc-theme",
        "theme_opts": {
            "default_theme": "dark",
            "base_url": "https://docs.gantt.ugla.ua"
        }
    },
    "markdown": {
        "hardwrap": false,
        "idInHeadings": true
    }
}